<p id="notice"><%= notice %></p>

<div class="page-header">
  <h1>Listing Lists</h1>
</div>


<div style="text-align:center">


<table class="table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td style="padding-right:15px"><%= list.name %></td>
        <td style="padding-right:10px"><%= link_to 'Show', list %></td>
        <td style="padding-right:10px"><%= link_to 'Edit', edit_list_path(list) %></td>
        <td style="padding-right:10px"><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to "New List", new_list_path, class: "btn btn-primary"%>


</div>